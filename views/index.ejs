<h1>Hi there, Welcome to my Page</h1>

<h2> <%=someVar %></h2>

<h2> <%=herokuVar %></h2>

<h3> Add you favorite drink! </h3>

<form method="POST" action="/addDrink">
    <label for="drink_name">Drink: </label>
        <input name="drink_name" value="">
    <br>
    <label for="size">Size: </label>
      <input name="size" value=""> 
    <br>
    <input type="submit" value="Add your drink" />
</form>

<h3> Update the Current Drinks to half-gallon!</h3> 
 <% for (var i=0; i< drinkData.length; i++ ) { %>
  <form method="POST" action="/updateDrink/<%= drinkData[i]._id %>" style="display: inline-block">  
    <%= drinkData[i].drink_name %> 
    <input type="submit" value="update"> 
  </form>
  <br/>
<% } %>

<h3> These are the Current Drinks you have on hand!</h3> 
 <% for (var i=0; i< drinkData.length; i++ ) { %>
  <form method="POST" action="/deleteDrink/<%= drinkData[i]._id %>" style="display: inline-block">  
    <%= drinkData[i].drink_name %> (<%= drinkData[i].size %>) 
    <input type="submit" value="delete"> 
    
  </form>
  <br/>
<% } %> 




